{
  "name": "redkingdreaming",
  "version": "1.0.0",
  "description": "Online Portfolio for Steve Yockey",
  "main": "index.js",
  "repository": "https://github.com/babycourageous/redkingdreaming.git",
  "author": "Rene Dellefont <renedellefont@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all clean build:assets build:11ty --parallel serve watch:*",
    "clean": "rm -rf _site",
    "build": "run-s build:assets build:11ty build:purgecss",
    "prebuild": "npm run clean",
    "build:assets": "mkdir _site && run-p build:assets:*",
    "build:assets:css": "postcss _assets/css/index.css -o _site/assets/styles.css",
    "build:assets:js": "webpack _assets/javascript/main.js -o _site/assets/bundle.js",
    "build:assets:images": "node imagemin.images.js",
    "build:assets:favicons": "cp _assets/favicons/* _site",
    "build:purgecss": "purgecss -c purgecss.config.js -o _site/assets",
    "build:11ty": "npx eleventy",
    "watch:css": "chokidar '_assets/css/**/*' 'tailwind.config.js' --command 'run-s build:assets:css browsersync:reload'",
    "watch:js": "chokidar '_assets/javascript/*' --command 'run-s build:assets:js browsersync:reload'",
    "watch:images": "chokidar '_assets/images/**/*' --command 'run-s build:assets:images browsersync:reload'",
    "watch:11ty": "chokidar '*.html' '*.njk' '_includes/**/*' '_data/*.json' --command 'run-s build:11ty browsersync:reload'",
    "serve": "browser-sync '_site' --port 4000 --no-notify",
    "browsersync:reload": "browser-sync reload --port 4000",
    "browsersync:stream": "browser-sync reload --port 4000 --files='assets/styles.css'"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.7.1",
    "autoprefixer": "^9.5.0",
    "chokidar": "^2.1.5",
    "chokidar-cli": "^1.2.2",
    "cssnano": "^4.1.10",
    "imagemin": "^6.1.0",
    "imagemin-cli": "^4.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "marked": "^0.6.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "precss": "^4.0.0",
    "purgecss": "^1.1.0",
    "svg-sprite": "^1.5.0",
    "tailwindcss": "^1.0.0-beta.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "flickity": "^2.2.0",
    "flickity-imagesloaded": "^2.0.0"
  }
}
